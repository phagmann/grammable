<h1>Grams!</h1>



<!-- picture Modal -->
  <div class=" clear"></div>
  <div class="pull-right">
  </div>
</div>
<div class="modal fade" id="myModalpicture" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalpicture">Upload a picture</h4>
      </div>
      <%= simple_form_for @picture, :url => gram_pictures_path(@gram) do |f| %>

        <div class="modal-body">
          <%= f.input :caption %>
          <%= f.input :picture %>
          
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Upload a picture", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

 <div class="col-xs-10 col-xs-offset-1">
  <h1 class="booyah-box pull-left">pictures</h1>
  
  <!-- Button trigger modal -->
  <button class=" btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModalpicture">
    Upload a picture
  </button>
</div>

<div class="clear"></div>


  <% @gram.pictures.each do |picture| %>
  <div class=" booyah-box col-xs-12 col-sm-6">
    
      <%= image_tag picture.picture %>
       <%= picture.caption %>
    
  </div>
<% end %>
<!-- End of picture Modal -->
 <br />


<% @grams.each do |gram| %>
<div>
  <%= gram.message %>
  <%= image_tag gram.picture %>
</div>
<% end %>